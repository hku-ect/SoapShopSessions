class Counter {
  int contatore;
  
  // *** COSTRUTTORE ****************************************************************************
  Counter() {
    contatore = 0;
  }
  
  // *** RESET **********************************************************************************
  void reset() {
    contatore = 0;
  }
  
  // *** INCREMENTA *****************************************************************************
  void incrementa() {
    contatore++;
  }
  
  // *** GETTERS ********************************************************************************
  int get() {
    return contatore;
  }
  
}
  
